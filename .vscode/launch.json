{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/libraries/core",
            "runtimeArgs": [
                "--inspect-brk",
                "node_modules/tsdx/dist/index.js",
                "test",
                "--runInBand",
                "--testNamePattern",
                "debug"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "cwd": "${workspaceFolder}/libraries/vscode/coya",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}/libraries/vscode/coya"],
            "outFiles": ["${workspaceFolder}/libraries/vscode/coya/out/**/*.js"]
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "cwd": "${workspaceFolder}/libraries/vscode/coya",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
            ],
            "outFiles": ["${workspaceFolder}/out/test/**/*.js"],
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Current Test File",
            "autoAttachChildProcesses": true,
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "program": "${workspaceRoot}/experimental/cli/ts-analyzer/node_modules/vitest/vitest.mjs",
            "args": ["run", "${relativeFile}"],
            "smartStep": true,
            "console": "integratedTerminal"
        },
        {
          "name": "Update-deps",
          "type": "node",
          "request": "launch",
          "runtimeExecutable": "node",
          "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],

          "args": ["common/scripts/update-packages.ts"],
          
          "cwd": "${workspaceRoot}",
          "internalConsoleOptions": "openOnSessionStart",
          "skipFiles": ["<node_internals>/**", "node_modules/**"]
        },
        {
          "type": "node",
          "request": "launch",
          "name": "Vitest - Debug Current Test File",
          "autoAttachChildProcesses": true,
          "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
          "program": "${workspaceRoot}/libraries/code-analyzers/ts-analyzer/node_modules/vitest/vitest.mjs",
          "args": ["run", "${relativeFile}"],
          "runtimeArgs": ["--preserve-symlinks-main"],
          "smartStep": true,
          "console": "integratedTerminal",
          "cwd": "${workspaceFolder}/libraries/code-analyzers/ts-analyzer"
          // "cwd": "${workspaceFolder}/libraries/code-analyzers/worker"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Vite: youtrack",
            "autoAttachChildProcesses": true,
            "smartStep": true,
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/libraries/connectors/youtrack/node_modules/vite-node/vite-node.mjs",
            "args": [
                "./index.dev.ts",
                "--watch",
            ],
            "cwd": "${workspaceFolder}/libraries/connectors/youtrack"
            // "runtimeArgs": ["--preserve-symlinks-main"],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Vite: connector runner",
            "autoAttachChildProcesses": true,
            "smartStep": true,
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/libraries/connectors/connectors-runner/node_modules/vite-node/vite-node.mjs",
            "args": [
                "./index.ts",
            ],
            "cwd": "${workspaceFolder}/libraries/connectors/connectors-runner"
            // "runtimeArgs": ["--preserve-symlinks-main"],
        }
    ],
    "compounds": []
}
